    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info">Delete category</h2>

        </div>
        <div class="row ">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disavled class="form-control" />
                    </div>

                </div>
              

                </div>
