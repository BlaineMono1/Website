@model ApplicationType;



<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info">Edit Application Type</h2>

        </div>
        <div class="row ">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                
                </div>
            <div class="form-group row">
                <div class="offset-4 col-4">
                    <div class="row justify-content-center  ">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100 mt-2" value="Update" />
                        </div>
                        <br /><br />
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100 mt-2"><i class="fas fa-sign-out-alt "></i> &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
